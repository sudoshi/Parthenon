# DataHub Environment Variables

# Database Configuration
DATAHUB_DB_HOST=localhost
DATAHUB_DB_PORT=5432
DATAHUB_DB_NAME=datahub
DATAHUB_DB_USER=datahub
DATAHUB_DB_PASSWORD=${DATAHUB_POSTGRES_PASSWORD}

# Elasticsearch Configuration
ELASTICSEARCH_HOST=broadsea-datahub-elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_PROTOCOL=http

# Neo4j Configuration
NEO4J_HOST=broadsea-datahub-neo4j
NEO4J_PORT=7474
NEO4J_URI=bolt://broadsea-datahub-neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=datahub

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVER=broadsea-datahub-kafka:9092
KAFKA_SCHEMAREGISTRY_URL=http://broadsea-datahub-schema-registry:8081

# DataHub GMS Configuration
DATAHUB_GMS_HOST=broadsea-datahub-gms
DATAHUB_GMS_PORT=8080

# DataHub Frontend Configuration
DATAHUB_FRONTEND_HOST=broadsea-datahub-frontend
DATAHUB_FRONTEND_PORT=9002

# DataHub MAE Consumer Configuration
DATAHUB_MAE_CONSUMER_HOST=broadsea-datahub-mae-consumer
DATAHUB_MAE_CONSUMER_PORT=9091

# DataHub MCE Consumer Configuration
DATAHUB_MCE_CONSUMER_HOST=broadsea-datahub-mce-consumer
DATAHUB_MCE_CONSUMER_PORT=9090

# Authentication Configuration
DATAHUB_SYSTEM_CLIENT_ID=datahub-system
DATAHUB_SYSTEM_CLIENT_SECRET=datahub-system-secret
